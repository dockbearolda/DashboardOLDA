enum OrderStatus {
  COMMANDE_A_TRAITER
  COMMANDE_EN_ATTENTE
  COMMANDE_A_PREPARER
  MAQUETTE_A_FAIRE
  PRT_A_FAIRE
  EN_ATTENTE_VALIDATION
  EN_COURS_IMPRESSION
  PRESSAGE_A_FAIRE
  CLIENT_A_CONTACTER
  CLIENT_PREVENU
  ARCHIVES
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model PersonNote {
  id        String   @id @default(cuid())
  person    String   @unique
  content   String   @default("")
  todos     Json     @default("[]")
  updatedAt DateTime @default(now()) @updatedAt

  @@map("person_notes")
}

model WorkflowItem {
  id        String         @id @default(cuid())
  listType  WorkflowListType
  title     String
  position  Int            @default(0)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@map("workflow_items")
  @@index([listType])
}

enum WorkflowListType {
  ACHAT
  STANDARD
  ATELIER
  DTF
}

model PRTRequest {
  id            String   @id @default(cuid())
  clientName    String
  dimensions    String   // e.g. "30x40cm"
  design        String   // image URL or design name
  color         String   // e.g. "Blanc" or hex code
  quantity      Int      @default(1)
  done          Boolean  @default(false)
  position      Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("prt_requests")
  @@index([done])
}


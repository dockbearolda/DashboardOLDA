model UserProfile {
  id               String   @id @default(cuid())
  userId           String   @unique // "loic" | "charlie" | "melina" | "amandine"
  profilePhotoLink String?           // URL https://â€¦ ou "emoji:ğŸ¦"
  mood             String   @default("")
  cardColor        String   @default("") // preset: "blue" | "purple" | "teal" | etc.
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("user_profiles")
}

